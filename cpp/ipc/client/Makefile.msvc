
PRJROOT       = $(SWDIR)
PRJ           = ipcclient
DESTDIR       = $(BINDIR)

WFLAGS        = 
LFLAGS        = /LIBPATH:"$(LIBDIR)"   
INCPATH       = -I"$(SWDIR)\cpp"
LIBS          = 
HEADER        = client.h
SOURCES       = client.cpp main.cpp
OBJECTS       = client.obj main.obj
TARGET        = $(PRJ).exe
TARGETLIB     = 

CC            = cl
CXX           = cl
LEX           = flex
YACC          = yacc
DEFINES       = 
CFLAGS        = /D_CRT_SECURE_NO_WARNINGS /GR /FC /MD /MP2 $(WFLAGS) $(DEFINES) /c 
CXXFLAGS      =  $(CFLAGS)
LEXFLAGS      = 
LINK          = link
AR            = ar cq
RANLIB        = ranlib -s
COMPRESS      = zip 
RM            = del

all: $(TARGET)

.cpp.obj:
	$(CC) $(CFLAGS) $(INCPATH) $<

$(TARGET): $(OBJECTS)   
	$(RM) $(DESTDIR)\$(TARGET) 
	$(LINK) $(LFLAGS) /OUT:$(DESTDIR)\$(TARGET) $(OBJECTS) $(LIBS) 

clean: 
	$(RM) $(OBJECTS) $(DESTDIR)\$(TARGET) $(DESTDIR)\$(TARGETLIB)


